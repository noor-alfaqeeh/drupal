<!-- Start: Header -->
<header class="header">
  <div class="container header-main">
    {% if page.site_branding %}
      <div class="site-brand">
        {{ page.site_branding }}
      </div> <!--/.site-branding -->
    {% endif %}
    <div class="header-right">
      {% include '@mili/template-parts/search.html.twig' %}
      {% if page.primary_menu %}
         <div class="mobile-menu">
           <i class="material-icons">menu</i>
         </div>
         <div class="primary-menu-wrapper">
           <div class="menu-wrap">
             <div class="close-mobile-menu">x</div>
             {{ page.primary_menu }}
           </div>
         </div>
       {% endif %}
       <!-- End: primary menu region -->
    </div> <!-- /.header-right -->
  </div> <!-- /.container -->
  {% if is_front and slider_show %}
    {% include '@mili/template-parts/slider.html.twig' %}
  {% elseif not is_front %}
    {% include '@mili/template-parts/page_header.html.twig' %}
  {% endif %}
</header>
<!-- End: Header -->
